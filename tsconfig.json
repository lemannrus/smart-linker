{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictFunctionTypes": true,
		"lib": [
			"DOM",
			"ES2020"
		],
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}

